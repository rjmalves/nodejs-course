<section class="pagination">
  <% if (currentPage != 1) { %>
  <a href="?page=1">1</a>
  <% } %> <% if (hasPreviousPage) { %>
  <a href="?page=<%= previousPage %>>" class="active"><%= previousPage %></a>
  <% } %>
  <a href="?page=<%= currentPage %>>" class="active"><%= currentPage %></a>
  <% if (hasNextPage) { %>
  <a href="?page=<%= nextPage %>>" class="active"><%= nextPage %></a>
  <% } %> <% if (currentPage !== lastPage && nextPage !== lastPage) { %>
  <a href="?page=lastPage">lastPage</a>
  <% } %>
</section>
